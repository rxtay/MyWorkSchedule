<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet-mapping>
        <servlet-name>EmployeeBranchServlet</servlet-name>
        <url-pattern>/employee/branches</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EmployerBranchesServlet</servlet-name>
        <url-pattern>/employer/branches</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EmployerViewBranchServlet</servlet-name>
        <url-pattern>/employer/branch</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterAccountServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewBranchEmployee</servlet-name>
        <url-pattern>/employer/branch/members</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EmployerBranchShiftServlet</servlet-name>
        <url-pattern>/employer/branch/shift</url-pattern>
        <url-pattern>/employer/branch/shift/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewBranchEmployeesShiftServlet</servlet-name>
        <url-pattern>/branch/employee/shift</url-pattern>
    </servlet-mapping>
</web-app>